<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp30"
        android:textColor="@color/black"
        android:textSize="@dimen/sp24"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Geography" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp50"
        android:layout_marginTop="@dimen/dp30"
        android:indeterminate="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_category" />

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_linear"
        tools:text="1/10" />

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp90"
        android:layout_marginVertical="@dimen/dp30"
        android:gravity="center"
        android:textColor="@color/textquestion"
        android:textSize="@dimen/sp24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_progress"
        tools:text="What is the largest city and commerical capital of Sri Lanka ?" />

    <TextView
        android:id="@+id/tv_answer1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_marginHorizontal="@dimen/dp50"
        android:layout_marginVertical="@dimen/dp50"
        android:background="@drawable/default_answer"
        android:gravity="center"
        android:textColor="@color/bluetv"
        android:textSize="@dimen/sp14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_question"
        tools:text="Colombo 1" />

    <TextView
        android:id="@+id/tv_answer2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_marginHorizontal="@dimen/dp50"
        android:layout_marginVertical="@dimen/dp12"
        android:background="@drawable/default_answer"
        android:gravity="center"
        android:textColor="@color/bluetv"
        android:textSize="@dimen/sp14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_answer1"
        tools:text="Colombo 1" />

    <TextView
        android:id="@+id/tv_answer3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_marginHorizontal="@dimen/dp50"
        android:layout_marginVertical="@dimen/dp12"
        android:background="@drawable/default_answer"
        android:gravity="center"
        android:textColor="@color/bluetv"
        android:textSize="@dimen/sp14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_answer2"
        tools:text="Colombo 1" />

    <TextView
        android:id="@+id/tv_answer4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_marginHorizontal="@dimen/dp50"
        android:layout_marginVertical="@dimen/dp12"
        android:background="@drawable/default_answer"
        android:gravity="center"
        android:textColor="@color/bluetv"
        android:textSize="@dimen/sp14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_answer3"
        tools:text="Colombo 1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_skip"
        android:layout_width="@dimen/dp100"
        android:layout_height="@dimen/dp60"
        android:layout_gravity="center"
        android:backgroundTint="@color/pink"
        android:text="Skip"
        android:textAllCaps="false"
        android:textSize="@dimen/dp16"
        android:textStyle="bold"
        app:cornerRadius="@dimen/dp30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_answer4" />

</androidx.constraintlayout.widget.ConstraintLayout>