<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".quizapp.presentation.ui.fragments.settings.SettingsFragment">

    <TextView
        android:id="@+id/tv_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp18"
        android:layout_marginTop="@dimen/dp32"
        android:text="Settings"
        android:textColor="@color/black"
        android:textSize="@dimen/sp26"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp90"
        android:layout_marginTop="@dimen/dp28"
        android:layout_marginBottom="@dimen/dp1">

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp18"
            android:gravity="center_vertical"
            android:text="share_this_app"
            android:textColor="@color/black"
            android:textSize="@dimen/sp20" />

        <ImageView
            android:id="@+id/im_share"
            android:layout_width="@dimen/dp20"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp10"
            android:src="@drawable/ic_arrow_forward"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp90">

        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp18"
            android:gravity="center_vertical"
            android:text="rate_us"
            android:textColor="@color/black"
            android:textSize="@dimen/sp20" />

        <ImageView
            android:id="@+id/im_rate"
            android:layout_width="@dimen/dp20"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp10"
            android:src="@drawable/ic_arrow_forward"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp90"
        android:layout_marginTop="@dimen/dp1">

        <TextView
            android:id="@+id/tv_leave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp18"
            android:gravity="center_vertical"
            android:text="leave_feedback"
            android:textColor="@color/black"
            android:textSize="@dimen/sp20" />

        <ImageView
            android:id="@+id/im_leave"
            android:layout_width="@dimen/dp20"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp10"
            android:src="@drawable/ic_arrow_forward"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp90"
        android:layout_marginTop="@dimen/dp1">

        <TextView
            android:id="@+id/tv_clean_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp18"
            android:gravity="center_vertical"
            android:text="clear_history"
            android:textColor="@color/violet"
            android:textSize="@dimen/sp20" />

        <ImageView
            android:id="@+id/im_clean_history"
            android:layout_width="@dimen/dp20"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp10"
            android:src="@drawable/ic_arrow_forward"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

</LinearLayout>